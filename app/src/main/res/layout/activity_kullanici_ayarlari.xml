<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KullaniciAyarlariActivity" tools:layout_editor_absoluteY="81dp">


    <TextView
            android:text="Ad:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvKullaniciAd"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
    />
    <TextView
            android:text="Ögrenci Numarası:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvKullaniciNo"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvKullaniciAd"
            app:layout_constraintStart_toStartOf="@+id/tvKullaniciAd" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Adres:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvKullaniciAdres"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvKullaniciNo"
            app:layout_constraintStart_toStartOf="@+id/tvKullaniciNo"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/_dynamic"/>
    <ListView
            android:layout_width="237dp"
            android:layout_height="495dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/listView"/>
</android.support.constraint.ConstraintLayout>